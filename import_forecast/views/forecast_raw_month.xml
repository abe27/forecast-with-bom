<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="import_forecast_view_tree" model="ir.ui.view">
        <field name="name">import_forecast.view.tree</field>
        <field name="model">import_forecast.forecast_raw_month</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="seq" />
                <field name="name" />
                <field name="part_id" />
                <field name="part_name" />
                <field name="qty" string="N"/>
                <field name="month_1" />
                <field name="month_2" />
                <field name="month_3" />
                <field name="status" widget="boolean_button"/>
                <field name="create_date" />
            </tree>
        </field>
    </record>

    <record id="import_forecast_view_form" model="ir.ui.view">
        <field name="name">import_forecast.view.tree</field>
        <field name="model">import_forecast.forecast_raw_month</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" />
                </group>
                <group>
                    <field name="part_id" />
                    <field name="part_name" />
                </group>
                <group>
                    <field name="qty" string="N"/>
                    <field name="month_1" />
                    <field name="month_2" />
                    <field name="month_3" />
                </group>
                <group>
                    <field name="status" />
                </group>
            </form>
        </field>
    </record>
</odoo>